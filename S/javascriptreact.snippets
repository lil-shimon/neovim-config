# ---------------------------------------
#             base scss
# ---------------------------------------
snippet sc "base scss format" b
$1 {
		$2: $3;
}
endsnippet


# ---------------------------------------
#           declare  variable 
# ---------------------------------------
snippet var "declare variable" b
$1: $2;
endsnippet


# ---------------------------------------
#             if statement
# ---------------------------------------
snippet if "if" b
@if $1 { $2;}
endsnippet

# ---------------------------------------
#               if else
# ---------------------------------------
snippet ife "if else" b
@if $1 {
		$2;
} @else {
		$3;
}
endsnippet


# ---------------------------------------
#             if else elseif
# ---------------------------------------
snippet elif "if else else if" b
@if $1 {
		$2;
} @else if {
		$3;
} @else {
		$4;
}
endsnippet


# ---------------------------------------
#             console.dir
# ---------------------------------------
snippet cdir "console.dir" b
console.dir(${1:obj})
endsnippet

